  "scripts": {
    "start": "vite",
    "serve": "vite preview",
    "test": "vitest",
    "build": "del-cli ./dist && tsc && vite build",
    "build:mobile": "env-cmd -f .env.mobile npm run build",
    "build:desktop": "env-cmd -f .env.desktop npm run build",
    "electron-dev": "set APP_DEV=true && electron .",
    "make:dekstop": "npm run build:desktop && electron-forge package",
    "make:osx": "npm run build:desktop && electron-forge make --arch=universal"
  },
  "eslintConfig": {
    "globals": {
      "BigInt": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.0",
